<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--
        Màu nền của tab khi KHÔNG được chọn.
        Sử dụng màu trong suốt (@android:color/transparent) để nó hòa vào nền xám bên ngoài.
        Điều này tạo ra cảm giác tab "chìm" xuống.
    -->
    <solid android:color="@android:color/transparent" />

    <!--
        Bo tròn các góc.
        Giá trị này NÊN GIỐNG HỆT giá trị trong file "cart_tab_selected.xml"
        để khi chuyển đổi trạng thái, kích thước không bị thay đổi.
        Ví dụ: 6dp.
    -->
    <corners android:radius="6dp" />

    <!-- Không cần thẻ <stroke> vì tab không được chọn thường không có viền -->

</shape>
