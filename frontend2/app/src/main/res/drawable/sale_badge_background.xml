<?xml version="1.0" encoding="utf-8"?>
<!-- File: res/drawable/sale_badge_background.xml -->

<!--
    Định nghĩa một hình dạng (shape).
    android:shape="oval" có nghĩa là hình này sẽ là hình elip.
    Vì trong layout chúng ta đặt width và height bằng nhau (40dp),
    nên hình elip này sẽ trở thành hình tròn.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Đặt màu nền cho hình tròn. Ở đây là màu đỏ đậm. -->
    <solid android:color="#E91E63" />

    <!--
        (Tùy chọn) Thêm một đường viền (stroke) màu trắng xung quanh hình tròn.
        Điều này giúp tag nổi bật hơn trên nền ảnh sản phẩm.
    -->
    <stroke
        android:width="1dp"
        android:color="@android:color/white" />

</shape>
