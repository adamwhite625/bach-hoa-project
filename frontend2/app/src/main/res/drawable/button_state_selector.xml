<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái 1: Nút bị vô hiệu hóa (Hết hàng) -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!-- Dùng màu đỏ, bạn có thể chọn một màu đỏ trong file colors.xml -->
            <solid android:color="#E53935"/> <!-- Ví dụ: màu đỏ (Material Red 600) -->
        </shape>
    </item>

    <!-- Trạng thái 2: Nút được bật (Mặc định - Còn hàng) -->
    <item>
        <shape android:shape="rectangle">
            <!-- Dùng màu primary gốc của bạn -->
            <solid android:color="@color/primary"/>
        </shape>
    </item>

</selector>
