<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 1. Thanh màu xanh với ô tìm kiếm -->
    <RelativeLayout
        android:id="@+id/topSection"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/primary"
        android:padding="16dp">

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/search_bar_bg"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="12dp"
            android:hint="Tìm kiếm đơn hàng..."
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </RelativeLayout>

    <!-- 2. Khung "Đơn hàng từng mua" -->
    <androidx.cardview.widget.CardView
        android:id="@+id/purchasedOrdersCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topSection"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Đơn hàng từng mua"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <!-- 3. Danh sách các đơn hàng -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ordersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/purchasedOrdersCard"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="16dp" />

</RelativeLayout>